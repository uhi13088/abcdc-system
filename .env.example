# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database (Direct connection for migrations)
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_LANDING_URL=http://localhost:3001
NEXT_PUBLIC_PLATFORM_URL=http://localhost:3002
NEXT_PUBLIC_HACCP_URL=http://localhost:3003
NEXT_PUBLIC_ROASTING_URL=http://localhost:3004

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
# For packages/shared push notification service (JSON string format)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your_project_id",...}

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=ABC Staff

# Encryption (for sensitive data like SSN)
SSN_ENCRYPTION_KEY=your_32_character_encryption_key

# Cron & API Security
CRON_SECRET=your_cron_secret_key
INIT_SECRET_KEY=your_init_secret_key
QR_SECRET=your_qr_secret_key

# Push Notifications (Web VAPID)
# Generate keys with: node scripts/generate-vapid-keys.js
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# AI Features (Optional)
OPENAI_API_KEY=your_openai_api_key

# Mobile App
